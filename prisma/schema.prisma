// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["mongodb"]
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URL")
}

model products {
   id   String @id @default(auto()) @map("_id") @db.ObjectId
   catagory String
   seller_name String
   post_title String?
   price Float
   condition String?
   location String?
   product_details String?
   reference_link String?
   contact_info String?
   photo String?
   if_sold Boolean
   update_time  DateTime  @default(now())
}

model user_sample {
   id   String @id @default(auto()) @map("_id") @db.ObjectId
   email String
   name String
   password String
}    